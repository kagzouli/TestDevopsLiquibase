<?xml version="1.0" encoding="UTF-8"?>
<udm.DeploymentPackage version="1.1.0" application="TEST/EXAKA/testdevopsliquibase">

  <application />
  <orchestrator />

  <templates>

    <!-- Define a proper Host -->
    <template.overthere.Host name="/Hosts/dev-db">
      <os>Linux</os>
      <address>127.0.0.1</address> <!-- or real DB server IP -->
      <credentials>/Credentials/db-ssh</credentials> <!-- define your SSH credentials in XLD -->
    </template.overthere.Host>

    <!-- Liquibase Runner -->
    <template.liquibase.Runner name="/Templates/liquibase-runner">
      <childTemplates />
      <tags />
      <allowConcurrentDeployments>true</allowConcurrentDeployments>
      <limitNumberOfConcurrentDeployments>1</limitNumberOfConcurrentDeployments>
      <envVars />
      <host>/Hosts/dev-db</host> <!-- reference the Host -->
      <databaseUsername>liquibase</databaseUsername>
      <databasePassword>liquibase_pass</databasePassword>
      <databaseJDBCURL>jdbc:mariadb://127.0.0.1:3306/testliquibase?disablePlugins=gssapi&amp;disableSslHostnameVerification=true</databaseJDBCURL>
      <databaseJDBCDriver>org.mariadb.jdbc.Driver</databaseJDBCDriver>
      <liquibaseLauncher>liquibase.integration.commandline.Main</liquibaseLauncher>
      <isNoSQL>false</isNoSQL>
      <files>
        <file source="db/changelog/" /> <!-- include entire changelog folder recursively -->
      </files>
    </template.liquibase.Runner>

  </templates>

  <dependencyResolution>LATEST</dependencyResolution>
  <undeployDependencies>false</undeployDependencies>

</udm.DeploymentPackage>
