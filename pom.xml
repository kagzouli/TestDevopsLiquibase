<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
<modelVersion>4.0.0</modelVersion>
<groupId>com.exakaconsulting.poc</groupId>
<artifactId>testdevopsliquibase</artifactId>
<version>0.0.1-SNAPSHOT</version>
<properties>
	<db.version>v1.1.0</db.version>
</properties>
  
<dependencies>
  </dependencies>

<build>
	<plugins>
		<plugin>
			<artifactId>maven-compiler-plugin</artifactId>
    		<version>3.5.1</version>
    		<configuration>
        		<source>17</source>
        		<target>17</target>
    		</configuration>
		</plugin>

		<plugin>
    		<groupId>org.liquibase</groupId>
    		<artifactId>liquibase-maven-plugin</artifactId>
    		<version>4.33.0</version>

			<!-- ┌─────────────────────────────────────────────┐ -->
			<!-- │  Configuration commune aux deux exécutions  │ -->
			<!-- └─────────────────────────────────────────────┘ -->
			<configuration>
				<propertyFile>src/main/resources/liquibase.properties</propertyFile>
				<outputFileEncoding>UTF-8</outputFileEncoding>
			</configuration>

			<executions>

				<!-- ┌──────────────────────────────────────────┐ -->
				<!-- │  EXÉCUTION 1 — Execution du    │ -->
				<!-- └──────────────────────────────────────────┘ -->
				<execution>
					<id>clear-checksums</id>
					<phase>prepare-package</phase>
					<goals>
						<goal>clearCheckSums</goal>
					</goals>
					<configuration>
						<url>offline:mariadb?version=10.6</url>
					</configuration>
				</execution>

				<!-- ┌──────────────────────────────────────────┐ -->
				<!-- │  EXÉCUTION 2 — Génération du updateSQL   │ -->
				<!-- └──────────────────────────────────────────┘ -->
				<execution>
					<id>generate-update-sql</id>
					<phase>prepare-package</phase>
					<goals>
						<goal>updateSQL</goal>
					</goals>
					<configuration>
						<outputFile>${project.build.directory}/liquibase/testdevopsliquibase-${db.version}.sql</outputFile>
						<url>offline:mariadb?version=10.6&amp;changeLogFile=${project.build.directory}/liquibase/databasechangelog.csv&amp;outputLiquibaseSql=true</url>
					</configuration>
				</execution>

				<!-- ┌──────────────────────────────────────────────┐ -->
				<!-- │  EXÉCUTION 3 — Génération du rollbackSQL     │ -->
				<!-- └──────────────────────────────────────────────┘ -->
				<execution>
					<id>generate-rollback-sql</id>
					<phase>prepare-package</phase>
					<goals>
						<goal>rollbackSQL</goal>
					</goals>
					<configuration>
						<rollbackTag>${db.version}</rollbackTag>
						<outputFile>${project.build.directory}/liquibase/testdevopsliquibase-${db.version}-rollback.sql</outputFile>
						<url>offline:mariadb?version=10.6&amp;changeLogFile=${project.build.directory}/liquibase/databasechangelog.csv&amp;outputLiquibaseSql=false</url>
					</configuration>
				</execution>

			</executions> 
     	</plugin>
    </plugins>
  </build>
</project>